\newenvironment{twocolentry}[2][]{
    \begin{samepage}
    \onecolentry
    \def\secondColumn{#2}
    \setcolumnwidth{\fill, 6 cm}
    \begin{paracol}{2}
}{
    \switchcolumn \raggedleft \secondColumn
    \end{paracol}
    \endonecolentry
    \end{samepage}
}

\newenvironment{threecolentry}[3][]{
    \begin{samepage}
    \onecolentry
    \def\thirdColumn{#3}
    \setcolumnwidth{, \fill, 6 cm}
    \begin{paracol}{3}
    {\raggedright #2} \switchcolumn
}{
    \switchcolumn \raggedleft \thirdColumn
    \end{paracol}
    \endonecolentry
    \end{samepage}
}

