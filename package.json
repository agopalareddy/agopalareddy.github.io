{
  "name": "minimal-mistakes",
  "version": "3.4.2",
  "description": "Minimal Mistakes Jekyll theme npm build scripts",
  "repository": {
    "type": "git",
    "url": "git://github.com/mmistakes/minimal-mistakes.git"
  },
  "keywords": [
    "jekyll",
    "theme",
    "minimal"
  ],
  "author": "Michael Rose",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mmistakes/minimal-mistakes/issues"
  },
  "homepage": "https://mmistakes.github.io/minimal-mistakes/",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.7",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-promise": "^7.1.0",
    "npm-run-all": "^1.7.0",
    "onchange": "^7.1.0",
    "prettier": "^3.3.3",
    "terser": "^5.31.0",
    "stylelint": "^16.8.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "postcss": "^8.4.47",
    "postcss-scss": "^4.0.9"
  },
  "scripts": {
    "lint": "eslint assets/js/_main.js",
    "format": "prettier --write assets/js/_main.js",
    "lint:css": "stylelint \"_sass/**/*.scss\"",
    "format:css": "stylelint \"_sass/**/*.scss\" --fix",
    "minify": "terser assets/js/vendor/jquery/jquery-1.12.4.min.js assets/js/plugins/jquery.fitvids.js assets/js/plugins/jquery.greedy-navigation.js assets/js/plugins/jquery.magnific-popup.js assets/js/plugins/jquery.smooth-scroll.min.js assets/js/plugins/stickyfill.min.js assets/js/_main.js -c -m -o assets/js/main.min.js",
    "watch:js": "onchange \"assets/js/**/*.js\" -e \"assets/js/main.min.js\" -- npm run build:js",
    "build:js": "npm run minify",
    "build": "npm run build:js && bundle exec jekyll build --config _config.yml,_config.dev.yml"
  }
}
